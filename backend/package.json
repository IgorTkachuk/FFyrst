{
  "private": true,
  "engines": {
    "node": "14.x.x",
    "npm": "6.x.x"
  },
  "scripts": {
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:test": "cross-env NODE_ENV=test sequelize-cli db:migrate",
    "migrate:test:reset": "cross-env NODE_ENV=test sequelize-cli db:migrate:undo:all && npm run migrate:test",
    "seed:test": "cross-env NODE_ENV=test sequelize-cli db:seed:all",
    "seed": "cross-env NODE_ENV=development sequelize-cli db:seed:all",
    "test": "cross-env NODE_ENV=test jest --testTimeout=30000 --forceExit",
    "pretest": "cross-env NODE_ENV=test npm run migrate:test:reset && npm run seed:test",
    "coverage": "npm run pretest && jest --coverage && cat ./coverage/lcov.info | coveralls",
    "start:dev": "nodemon --exec ts-node -r dotenv/config -r tsconfig-paths/register ./src/server.ts",
    "start": "npm run migrate && node -r dotenv/config ./src/server.js",
    "build:ts": "tsc && tscpaths -p tsconfig.json --src . --out build",
    "build:copy": "cp -r shared build && cp -r public build",
    "build": "npm run build:ts && npm run build:copy"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "bcrypt": "5.0.1",
    "cloudinary": "^1.26.2",
    "cors": "^2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "i": "^0.3.6",
    "jsonwebtoken": "8.5.1",
    "multer": "^1.4.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nanoid": "3.1.20",
    "nodemailer": "^6.6.2",
    "npm": "^7.19.1",
    "pg": "8.5.1",
    "pino": "6.11.1",
    "pino-pretty": "4.5.0",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "redis": "^3.1.2",
    "sequelize": "6.5.0",
    "shared": "file:shared",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "9.1.1",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.2",
    "@types/bcrypt": "5.0.0",
    "@types/express": "4.17.11",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "8.5.3",
    "@types/multer": "^1.4.7",
    "@types/node": "14.14.31",
    "@types/pino": "6.3.6",
    "@types/pug": "^2.0.5",
    "@types/redis": "^2.8.30",
    "@types/sequelize": "4.28.9",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yup": "^0.29.12",
    "cross-env": "^7.0.3",
    "jest": "^27.0.6",
    "nodemon": "2.0.7",
    "sequelize-cli": "6.2.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "tsconfig-paths": "3.9.0",
    "tscpaths": "0.0.9",
    "typescript": "4.1.2"
  }
}
